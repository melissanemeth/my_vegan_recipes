<div>
    <p><%= comment.chef.chefname %></p>
    <p><%= comment.body %></p>
    <p>
      <span class='quiet'><small> created: <%= time_ago_in_words(comment.created_at)%> ago, </small></span>
      <span class='quiet'><small> updated: <%= time_ago_in_words(comment.updated_at)%> ago</small></span>
    </p>

    <% if logged_in? && (comment.chef == current_user || current_user.admin?) %>
    <div class="pull-right small">
      <%= link_to "Edit", edit_recipe_comment_path(@recipe, comment) %>
      <%= link_to "Delete", [@recipe, comment], method: :delete %>
    </div>
    <% end %>
    <hr/>
</div>